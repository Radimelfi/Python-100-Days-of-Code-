print (calculator)

def add(n1, n2):
  return n1 + n2

def sustract(n1, n2):
  return n1 - n2

def multiply(n1, n2):
  return n1 * n2

def Divide(n1, n2):
  return n1 / n2

operation = {
  "+": "add ",
  "-": "sustract",
  "*": "multiply ",
  "/": "divide"
}
num1 = int(input ("Enter the first number ")
#num2 = int (input("Enter the second number "))

for operation_symbol in operation:
  print (operation_symbol)
should_do  = True 

While should_do:
  choice_operation = input("Enter an operation ")
  num2 = int (input("Enter the second number "))
  calculation_f = operation[choice_operation] 
  answer = calculation_f(n1, n2)

  print (f"{num1}{choice_operation} {num2} = {answer}")
  if input(f"Type "y" to continuing calcuting with {answer}: ") == "y":
    num1 = answer
  else:
    should_do = False